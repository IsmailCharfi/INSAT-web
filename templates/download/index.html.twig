{% extends 'table.html.twig' %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Ordre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for download in downloads %}
            <tr>
                <td>{{ download.id }}</td>
                <td>{{ download.titre }}</td>
                <td>{{ download.ordre }}</td>
                <td>
                    <a href="{{ path('download_show', {'id': download.id}) }}">show</a>
                    <a href="{{ path('download_edit', {'id': download.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('download_new') }}">Create new</a>
{% endblock %}
