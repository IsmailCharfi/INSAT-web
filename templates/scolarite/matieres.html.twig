{% extends 'base.html.twig' %}

{% block title %}Matieres{% endblock %}

{% block body %}
    <br><br><br><br><br><br><br>


                        {% for mat,ex in matiere %}
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingOne">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ mat }}" aria-expanded="true" aria-controls="collapse{{ mat }}">
                                        {{ mat }}
                                    </button>
                                </h2>
                                <div id="collapse{{ mat }}" class="accordion-collapse collapse " aria-labelledby="headingOne" data-bs-parent="#accordionExample2">
                                    <div class="accordion-body">

                                        {% for key,typeEx in ex %}
                                            <ul class="list-group">

                                                <li class="list-group-item"><a href="{{ path('notes',{'semester':semester, 'filiere':filiere , 'niveau':niveau , 'matiere':mat , 'type':typeEx }) }}"> {{ typeEx }}</a></li>
                                                
                                            </ul>

                                        {% endfor %}


                                    </div>
                                </div>
                            </div>
                        {% endfor %}









{% endblock %}
